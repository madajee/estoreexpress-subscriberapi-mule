#%RAML 1.0 Library
types:
  username:
    type: string
  password:
    type: string
  createuser: |
    {
      "type": "object",
      "$schema": "http://json-schema.org/draft-03/schema",
      "id": "http://jsonschema.net",
      "required": true,
      "properties": {
        "username": {
          "type": "string",
          "required": true,
          "minLength": 4,
          "maxLength": 6
        },
        "password": {
          "type": "string",
          "required": true
        },
        "name": {
          "type": "string",
          "required": true
        }
      }
    }
  readuser: |
    {
      "type": "object",
      "$schema": "http://json-schema.org/draft-03/schema",
      "id": "http://jsonschema.net",
      "required": true,
      "properties": {
        "username": {
          "type": "string",
          "required": true,
          "minLength": 4,
          "maxLength": 6
        },
        "password": {
          "type": "string",
          "required": true
        },
        "name": {
          "type": "string",
          "required": true
        }
      }
    }
  updateuser: |
    {
      "type": "object",
      "$schema": "http://json-schema.org/draft-03/schema",
      "id": "http://jsonschema.net",
      "required": true,
      "properties": {
        "username": {
          "type": "string",
          "required": true,
          "minLength": 4,
          "maxLength": 6
        },
        "password": {
          "type": "string",
          "required": true
        },
        "lastlogin": {
          "type": "string",
          "required": true
        }
      }
    }
  deleteuser: |
    {
      "type": "object",
      "$schema": "http://json-schema.org/draft-03/schema",
      "id": "http://jsonschema.net",
      "required": true,
      "properties": {
        "username": {
          "type": "string",
          "required": true,
          "minLength": 4,
          "maxLength": 6
        },
        "name": {
          "type": "string",
          "required": true
        }
      }
    }
  userq: |
    {
      "type": "object",
      "$schema": "http://json-schema.org/draft-03/schema",
      "id": "http://jsonschema.net",
      "required": true,
      "properties": {
        "msgtype": {
          "type": "string",
          "required": true
        },
        "message": {
          "type": "object",
          "$schema": "http://json-schema.org/draft-03/schema",
          "id": "http://jsonschema.net",
          "required": true,
          "properties": {
            "username": {
              "type": "string",
              "required": true,
              "minLength": 4,
              "maxLength": 6
            },
            "password": {
              "type": "string",
              "required": true
            },
            "name": {
              "type": "string",
              "required": false
            },
            "lastlogin": {
              "type": "string",
              "required": false
            }
          }
        }
      }
    }